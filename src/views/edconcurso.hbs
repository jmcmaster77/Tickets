<div class="container p-4">
    <div class="row">
        <div class="col mx-auto">
            <div class="card text-center">
                <div class="card-header text-center">
                    <b class="fs-3">Registrar Concurso</b>
                </div>
                <form action="/edconcurso/{{datos.idconcurso}}" class="form" method="POST" name="form_edcon"
                    id="form_edcon">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <div class="form-group p-2">
                                    <input type="text" value="{{datos.titulo}}" name="titulo"
                                        placeholder="Titulo del concurso" class="form-control " autocomplete="nope"
                                        oninput="this.value = this.value.replace(/[^a-zA-Z\u00f1\u00d1\u00E0-\u00FC]/g, '').replace(/(\..*)\./g, '$1');"
                                        autofocus>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group p-2">
                                    <textarea name="descripcion" rows="2" id="descripcion" class="form-control"
                                        placeholder="DescripciÃ³n">{{datos.descripcion}}</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group p-2">
                                    <input type="text" name="loteria" placeholder="Escribir Loteria a utilizar"
                                        class="form-control" value="{{datos.loteria}}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group p-2">
                                    <input type="date" name="fecha" placeholder="Fecha" class="form-control"
                                        min="2022-06-24" max="2050-12-31" value="{{datos.fecha}}" required>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group p-2">
                                    <input type="time" name="hora" placeholder="hora" class="form-control" min="08:00"
                                        max="22:00" value="{{datos.hora}}" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="mb-2">
                                        <div class="col-10 mx-auto">
                                            <button class="btn btn-success" style="margin: 2px 2px;padding: 7px 20px; width:180px;height:45px;
                                        background-color: #2720b8;border: none;">
                                                <img src="/icons/plus-circle.svg" alt="" width="20" height="20"
                                                    title="plus-circle">
                                                Modificar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="mb-2">
                                        <a href="/cconcursoad" class="btn btn-secondary" style="margin: 2px 2px;padding: 7px 20px; width:180px;height:45px;
                                        background-color: #2720b8;border: none;">
                                            <img src="/icons/arrow-left-circle.svg" alt="" width="20" height="20"
                                                title="arrow-left-circle">
                                            Retorno
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>